{
  "name": "nextjs_ic_template",
  "version": "0.3.0",
  "author": "Mikaal Naik",
  "description": "Next.js Internet Computer Soulbound Token Application",
  "keywords": [
    "nextjs",
    "internet computer",
    "icp",
    "starter",
    "soulbound tokens",
    "dfinity"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "export": "next export",
    "sync:hello": "DFX_NETWORK=local && rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/hello --exclude='idl/' --exclude='*.wasm' --delete ui/declarations",
    "sync:image": "DFX_NETWORK=local && rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/image --exclude='idl/' --exclude='*.wasm' --delete ui/declarations"
  },
  "devDependencies": {
    "@types/node": "18.13.0",
    "@types/react": "18.0.27",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.0",
    "eslint-plugin-react": "^7.29",
    "eslint-plugin-react-hooks": "^4.4",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@dfinity/agent": "^0.11",
    "@dfinity/auth-client": "^0.15.3",
    "@dfinity/candid": "^0.11",
    "@dfinity/identity": "^0.15.3",
    "@dfinity/principal": "^0.11",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "compressorjs": "^1.1.1",
    "events": "^3.3.0",
    "next": "^12.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.5.1",
    "sass": "^1.59.2",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.4"
  }
}
